{{#each erros}}
<div class="alert alert-danger"> {{texto}} </div>

{{/each}}
<h3>Editar postagens</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/editar" method="POST">

            <label for="">Titulo: </label>

            <input type="text" name="titulo" class="form-control" required="true" value="{{postagem.titulo}}">

            <label for="">Slug: </label>
            <input type="text" name="slug" class="form-control" required="true" value="{{postagem.slug}}">
            <label for="">Descricao: </label>
            <input type="text" name="descricao" class="form-control" required="true" value="{{postagem.descricao}}">

            <input type="hidden" name="id" value={{postagem._id}}>

            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" aria-valuetext="">{{postagem.conteudo}}</textarea>
            <label for="" class="form-control"> Categoria: </label>

            <select name="categoria" id="" class="form-control">

                <option value={{postagem.categoria._id}} selected> {{postagem.categoria.nome}} </option>
                {{#each categoria}}

                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">sem categorias</option>
                {{/each}}
            </select>
            <br>
            <button class="btn   btn-success mt-3" type="submit">postagem</button>
    </div>
    </form>
</div>